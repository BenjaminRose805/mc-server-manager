{
  "name": "@mc-server-manager/electron",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop app wrapper for MC Server Manager",
  "author": {
    "name": "MC Server Manager",
    "email": "mc-server-manager@users.noreply.github.com"
  },
  "homepage": "https://github.com/BenjaminRose805/mc-server-manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/BenjaminRose805/mc-server-manager.git"
  },
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "electron dist/main.js",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@mc-server-manager/backend": "*",
    "@mc-server-manager/shared": "*"
  },
  "devDependencies": {
    "electron": "33.4.11",
    "electron-builder": "^26.8.0",
    "typescript": "^5.7.0"
  },
  "build": {
    "appId": "com.mc-server-manager.app",
    "productName": "MC Server Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "!dist/tsconfig.tsbuildinfo"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/migrations",
        "to": "backend/migrations",
        "filter": [
          "**/*.sql"
        ]
      },
      {
        "from": "../frontend/dist",
        "to": "frontend/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../shared/dist",
        "to": "shared/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Game",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    },
    "asar": true,
    "asarUnpack": [
      "dist/preload.js"
    ],
    "npmRebuild": true
  }
}
